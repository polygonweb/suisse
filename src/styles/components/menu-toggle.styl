.menu-toggle
	$this = selector()
	width 50px
	height 24px
	border 0
	background 0
	color #418ad3
	cursor pointer
	outline 0

	&__line
		position absolute
		left 0
		width 100%
		height 2px
		background currentColor
		transition .3s
		box-shadow 0 0 1px transparent

		&_top
			top 0
			width 40px

		&_bottom
			top 100%
			width 40px

		&_middle
			top 50%
			margin-top -1px

	&:hover
		{$this}__line
			width 100%

	&_active
		$m = $this
		{$m}__line

			&_middle
				opacity 0
				transform translateX(100%)

			&_top
			&_bottom
				top 50%
				margin-top -1px
				width 100%

			&_top
				transform rotate(45deg)

			&_bottom
				transform rotate(-45deg)