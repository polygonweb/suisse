.user-menu
	$this = selector()
	margin 0
	padding 0
	list-style none
	height 50px
	line-height 50px
	font-size 20px
	color #418ad3
	clearfix()

	+mq("menu")
		visibility hidden

	&__item
		margin-left 36px
		float left

		&_signin
			position relative
			display none
			line-height 1

			{$this}__link

				&::before
					content ""
					position absolute
					z-index 1
					top 0
					left 0
					width 100%
					height 100%

			& svg
				margin 0 auto 3px
				display block
				fill currentColor

			+mq("menu")
				position absolute
				right 0
				top 20px
				visibility visible
				display block

	&__link
		position relative
		color inherit
		text-decoration none
		transition .2s

		&::after
			content ""
			position absolute
			left 0
			right 0
			bottom 2px
			opacity 1
			border-top 1px solid #c1d7ed
			transition .2s

		&:hover
			&::after
				opacity 0

	&__apply
		width 220px