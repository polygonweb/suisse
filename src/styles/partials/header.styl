.page-header
	position absolute
	z-index 3
	left 10px
	right 10px
	top 30px
	margin-left auto
	margin-right auto
	box-sizing border-box
	padding 0 10px 22px
	max-width 90%
	max-width calc(100% - 20px)
	width 1540px
	background-color #e3eef6
	color #372d02
	border-radius 10px
	box-shadow 2px 17px 36.34px 9.66px rgba(0, 0, 0, 0.31);

	&__inner
		position relative
		clearfix()

	&__toggle
		position absolute
		top 28px
		left 0
		margin auto
		display none

	&__logo
		position absolute
		left 0px
		bottom 4px
		width 259px
		height 133px

		& svg
			width 100%
			height 100%

	&__user-menu
	&__main-menu
		float right
		clear right

	&__user-menu
		margin-bottom 42px

	+mq("menu")
		position fixed
		top 0
		left 0
		right 0
		padding 0
		width auto
		max-width none
		border-radius 0

		&__inner
			height 80px
			overflow hidden
			transition .3s

		&__toggle
			display block

		&__logo
			left 0
			right 0
			top -8px
			bottom auto
			margin auto
			width 170px

		&__main-menu
			visibility hidden
			opacity 0
			float none
			padding-bottom 20px
			background #e3eef6

			.page-header_menu-open &
				visibility visible
				opacity 1
