.lang-select
	position relative
	cursor pointer

	&__current
		display inline
		&::after
			content none

	&__icon
		margin-right 4px
		width 18px
		height 14px
		border 1px solid #c3c3c3

	&__text
		position relative
		&::after
			content ""
			position absolute
			left 0
			right 0
			bottom 2px
			opacity 0.7
			border-top 1px dashed
			transition .2s

	&__list
		position absolute
		z-index 1
		left 50%
		transform translateX(-50%)
		opacity 0
		visibility hidden
		min-width 200%
		background-color #fff
		box-shadow 0 3px 5px rgba(0, 0, 0, .2)

	&__item
		display block
		padding 0 18px
		color #418ad3
		text-decoration none
		transition .2s

		&:hover
			background rgba(65, 138, 211, .1)

	&:hover &__list
	&_open &__list
		opacity 1
		visibility visible
		transition .3s