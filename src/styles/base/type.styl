$basepath = "../fonts/";
$PTSans = $basepath + "PT Sans/";
$PNova = $basepath + "Proxima Nova/";

/* PT  Sans */
@font-face
	font-family "PT Sans"
	src url($PTSans + "PTS55F_W.eot")
	src local('☺'),
		url($PTSans + "PTS55F_W.eot?#iefix") format("embedded-opentype"),
		url($PTSans + "PTS55F_W.woff") format("woff"),
		url($PTSans + "PTS55F_W.ttf") format("truetype"),
		url($PTSans + "PTS55F_W.svg#PTSans-regular") format("svg");
	font-weight normal
	font-style normal
	font-display swap

@font-face
	font-family "PT Sans"
	src url($PTSans + "PTS75F_W.eot")
	src local('☺'),
		url($PTSans + "PTS75F_W.eot?#iefix") format("embedded-opentype"),
		url($PTSans + "PTS75F_W.woff") format("woff"),
		url($PTSans + "PTS75F_W.ttf") format("truetype"),
		url($PTSans + "PTS75F_W.svg#PTSans-Bold") format("svg");
	font-weight bold
	font-style normal
	font-display swap

